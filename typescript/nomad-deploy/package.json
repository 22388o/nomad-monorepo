{
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "ethers": "^5.5.1",
    "prettier": "^2.3.1",
    "ts-node": "^10.1.0",
    "typechain": "^5.0.0",
    "typescript": "^4.3.2"
  },
  "prepublish": "npm run build",
  "name": "@nomad-xyz/deploy",
  "version": "0.1.2",
  "description": "Nomad deploy tools",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "check": "tsc --noEmit",
    "prettier": "prettier --write ./src ./config ./scripts",
    "deploy-dev-core": "npx ts-node scripts/development/core.ts",
    "deploy-dev-bridges": "npx ts-node scripts/development/bridge.ts",
    "deploy-staging-core": "npx ts-node scripts/staging/core.ts",
    "deploy-staging-bridges": "npx ts-node scripts/staging/bridge.ts",
    "relink-all": "npm run relink-contracts && npm run relink-sdk",
    "relink-contracts": "cd ../typechain && npm run build && npm link && cd ../nomad-deploy && npm link @nomad-xyz/contract-interfaces",
    "relink-sdk": "cd ../nomad-sdk && npm run build && npm link && cd ../nomad-deploy && npm link @nomad-xyz/sdk"
  },
  "author": "Illusory Systems Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "@ethersproject/experimental": "^5.3.0",
    "@nomad-xyz/contract-interfaces": "file:../typechain",
    "@nomad-xyz/sdk": "file:../nomad-sdk",
    "@types/node": "^16.9.1",
    "axios": "^0.21.3",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0"
  },
  "keywords": [
    "nomad",
    "contracts",
    "deploy"
  ]
}
